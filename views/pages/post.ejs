<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= data.title %></title>
    <%- include('../partials/head'); %>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .blank{
            width: 12px;
            display: inline-block;
        }

        .board_btn{
            color: #fff !important;
            background-color: #333;
            padding: 2px 8px;
        }
    </style>
</head>
<body>
    <div class="content">
        <%- include('../partials/nav'); %>

        <div class="card border-light mb-3">
            <div class="card-header bg-transparent">
                <h1 class="text-info"><%= data.title %></h1>

                <div class="d-flex justify-content-between">
                    <span class="text-secondary">&nbsp;&nbsp;<%= data.name %></span>

                    
                    <form action="/board/delete/<%= data.num %>" method="GET">
                        <% if(isAuthenticated && currentUser.numid == data.author){ %>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/board/edit/<%= data.num %><%= getPostQueryString() %>" class="btn btn-secondary" role="button">
                                    <i class="fa fa-pencil-square-o"></i>
                                    수정
                                </a>
                                <a href="#" onclick="confirm('삭제하시겠습니까?')?this.parentElement.parentElement.submit():null;" class="btn btn-secondary" role="button">삭제</a>
                            </div>
                        <% }; %>
                    </form>
                    </div>
                </div>
                
            </div>

            <div class="card-body">
              <%= data.content %>
            </div>

            <div class="card-footer bg-transparent d-flex justify-content-end">
                <a href="/board<%= getPostQueryString() %>" class="board_btn ">
                    <i class="fa fa-bars"></i>
                    <span>목록</span>
                </a>
            </div>

            <h4 class="mt-3">댓글</h4>

            <% if(comment.length){ %>
                <div class="mt-3 border-bottom">
                    <% comment.forEach(function(item){ %>
                        <div class="border-top pt-1 pb-1">
                            <div class="row">
                                <div class="col-3 col-mb-2 col-lg-1 pl-4"><%= item.username %></div>
                                <div class="col-9 col-mb-10 col-lg-11">
                                    <div class="comment-show">
                                        <div class="comment-text mb-3"><%= item.text %></div>
                                        <small class="d-block">
                                            (Created: <span data-date-time="<%= item.create %>"></span>)
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <div class="mt-3">
                <form action="/comment?postId=<%= post.id %><%= getPostQueryString(true) %>" method="post">
                    <filedset <%= !isAuthenticated?'disabled':'' %>>
                        <div class="row">
                            <div class="col-8">
                                <textarea name="text" rows="2" class="form-control <%= (commentError.error.text)?'is-invalid':'' %>">
                                    <%= commentForm.form.text %>
                                </textarea>
                            </div>
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary h-100 mr-2">댓글 작성</button>
                            </div>
                        </div>
                        <% if(commentError.error.text){ %>
                            <span class="invalid-feedback d-blok"><%= commentError.errors.text.message %></span>
                        <% } %>
                    </filedset>
                </form>
            </div>
        </div>
    </div>
</body>
</html>